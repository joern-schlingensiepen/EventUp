@{
    ViewBag.Title = "About Us";
}

<link rel="stylesheet" href="~/Content/font-awesome.css" />
<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>
    <p1>@ViewBag.Message</p1>

    

    <!-- Ejemplo de mostrar imágenes en cuadros -->
    <div class="image-container">
        <div class="image-row">
            <!-- Cuadro 1 -->
            <div class="image-box">
                <h4>Weddings</h4>
                <img src="~/Content/ImagesPanel/7.jpg" alt="Imagen 7">
                <p>Celebrate love with unforgettable wedding events tailored just for you.</p>
                <a href="#">Read More</a>
            </div>

            <!-- Cuadro 2 -->
            <div class="image-box">
                <h4>Birthdays</h4>
                <img src="~/Content/ImagesPanel/11.jpg" alt="Imagen 6">
                <p>Create lasting memories with personalized birthday celebrations that dazzle.</p>
                <a href="#">Read More</a>
            </div>

            <!-- Cuadro 3 -->
            <div class="image-box">
                <h4>Corporate events</h4>
                <img src="~/Content/ImagesPanel/4.jpg" alt="Imagen 4">
                <p>Elevate your corporate gatherings with seamless and impactful event planning.</p>
                <a href="#">Read More</a>
            </div>
        </div>

        <div class="image-row">
            <!-- Cuadro 1 -->
            <div class="image-box">
                <h4>Events for Kids</h4>
                <img src="~/Content/ImagesPanel/10.jpg" alt="Imagen 1">
                <p>Make your child's special day magical with fun and delightful kids' events.</p>
                <a href="#">Read More</a>
            </div>

            <!-- Cuadro 2 -->
            <div class="image-box">
                <h4>Concerts</h4>
                <img src="~/Content/ImagesPanel/5.jpg" alt="Imagen 2">
                <p>Plan your concerts with ease – music, food, drinks, security, cleanliness, all in one!</p>
                <a href="#">Read More</a>
            </div>

            <!-- Cuadro 3 -->
            <div class="image-box">
                <h4>Others</h4>
                <img src="~/Content/ImagesPanel/2.jpg" alt="Imagen 3">
                <p>Explore a variety of unique and extraordinary events tailored to your preferences.</p>
                <a href="#">Read More</a>
            </div>
        </div>
    </div>
</main>

<style>
    * {
        box-sizing: border-box;
    }

    .image-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .image-row {
        display: flex;
        flex-wrap: wrap;
        margin: 10px 0; /* Espaciado entre las filas de cuadros */
    }

    .image-box {
        border: 1px solid #ccc;
        padding: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: calc(33.33% - 20px);
        margin: 10px;
        text-align: center;
    }

        .image-box img {
            max-width: 100%;
            height: 60%;
            margin-bottom: 10px;
        }

        .image-box a {
            color: #007bff;
            text-decoration: none;
            display: block;
        }

    p1 {
        font-family: 'Tahoma', sans-serif; /* Utiliza Tahoma y, si no está disponible, usa una fuente sans-serif genérica */
        font-size: 20px; /* Puedes ajustar el tamaño según tus preferencias */
    }

</style>