@model EventUpWebApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<head>
    <!-- Otros elementos en head -->
    
    <link rel="stylesheet" href="~/Content/Account.css" /> <!-- Agrega tu archivo CSS existente -->
    <link rel="stylesheet" href="~/Content/font-awesome.css" />
</head>

<body>
    <div class="outer-container">
        <div class="logo-container">
            <!-- Puedes agregar tu logo aquí -->
            <img class="logo" src="~/Content/Images/logo1.png" alt="Logo de la empresa" />
        </div>

        <div class="login-container">
            <h2>Register</h2>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "login-form" }))
            {
                @Html.AntiForgeryToken()
                <h3>Create a new account.</h3>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })

              
                <div class="form-group">
                    <label for="password">Email</label>
                    <div class="input-group">
                        <i class="fa fa-envelope input-group-icon"></i>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="input-group">
                        <i class="fa fa-lock input-group-icon"></i>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group">
                    <label for="password">Confirm password</label>
                    <div class="input-group">
                        <i class="fa fa-lock input-group-icon"></i>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>

                <br />


                <input type="submit" class="submit-button" value="Register" />

            }
        </div>
    </div>
</body>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


