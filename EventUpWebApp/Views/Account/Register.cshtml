@model EventUpWebApp.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<head>
    <link rel="stylesheet" href="~/Content/Account.css" /> <!-- Cambia 'ruta_del_archivo_css' según la ubicación de tu archivo CSS -->
    <link rel="stylesheet" href="~/Content/font-awesome.css" />
</head>


<body>
    <div class="outer-container">
        <div class="logo-container">
            <!-- Aquí coloca tu logo -->
            <img class="logo" src="~/Content/Images/logo1.png" alt="Logo de la empresa" />
        </div>

        <div class="login-container">
            <h2>Register</h2>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "login-form" }))
            {
                @Html.AntiForgeryToken()
                <h3>Create a new account.</h3>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <label for="email">Email</label>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="confirm-password">Confirm Password</label>
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                </div>

                <input type="submit" value="Register" class="submit-button" />
            }

            <p>Already have an account? <a href="@Url.Action("SignIn", "Account")">Sign in here</a></p>
        </div>
    </div>
    
</body>