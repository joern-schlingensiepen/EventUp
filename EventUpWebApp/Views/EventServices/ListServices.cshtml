@model IEnumerable<EventUpLib.Service>

@{
    ViewBag.Title = "ListServices";
}

<br />

<h2>Find here the services you need for your event...</h2>
<!--Esta vista es donde se ven los servicios disponibles y donde el role_planner puede escoger-->
<br />


@using (Html.BeginForm("SaveServicesForEvent", "EventServices", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4">
            <label class="mr-2" for="cityFilter">City:</label>
            @Html.DropDownList("cityFilter", ViewBag.CityList as SelectList, "All Cities", new { @class = "form-control mr-2" })
        </div>

        <div class="col-md-4">
            <label class="mr-2" for="typServiceFilter">Service:</label>
            @Html.DropDownList("typServiceFilter", ViewBag.Typ_ServiceList as SelectList, "All Services", new { @class = "form-control mr-2" })
        </div>

        <div class="col-md-4">
            <label class="mr-2" for="typEventFilter">Event:</label>
            @Html.DropDownList("typEventFilter", ViewBag.Typ_EventList as SelectList, "All Events", new { @class = "form-control mr-2" })
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
}

<br />
<br />
<br />

@using (Html.BeginForm("SaveServicesForEvent", "EventServices", FormMethod.Post))
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Typ_Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Typ_Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FixCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HourCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Typ_Service)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Typ_Event)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FixCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HourCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.CheckBox("selectedServices", false, new { value = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                </td>
            </tr>
        }
    </table>

    <div class="row mt-2">
        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-primary">Save services for my Event</button>
        </div>
    </div>
}