@model IEnumerable<EventUpLib.Service>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<!--Muestra todos los servicios registrados en la plataforma y quien lo está ofreciendo, esto lo debe ver el Admin-->

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Typ_Service)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Typ_Event)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FixCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HourCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.More)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isOfferedBy.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Typ_Service)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Typ_Event)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FixCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HourCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PersonCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.More)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isOfferedBy.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div class="text-center">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</div>
