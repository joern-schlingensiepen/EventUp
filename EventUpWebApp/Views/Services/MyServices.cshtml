@model IEnumerable<EventUpLib.Service>

@{
    ViewBag.Title = "MySevices";
}

<h2>My Services</h2>

<!--Muestra todos los servicios registrados para la sesión de usuario actual-->

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Typ_Service)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Typ_Event)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FixCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HourCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Typ_Service)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Typ_Event)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FixCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HourCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
       
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                @Html.ActionLink("See events", "ServiceIsBookedFor", "EventServices", new { id = item.Id, selectedEventId = ViewBag.SelectedEventId }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>

<div class="text-center">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</div>
